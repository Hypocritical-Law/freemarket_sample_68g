= stylesheet_link_tag "furima/_reset"
= stylesheet_link_tag "devise/registrations_new"
=render "shared/miniheader"
.single-main
  .single-main__head
    %h2 
      ログイン
  .single-main__form
    = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
      .l-single-content
        .l-single-content__group
        %h3.center
          アカウントをお持ちでない方はこちら
        %p
          - if user_signed_in?
            = form_with model: @user, url: user_registration_path, class: :form, local: true do |f|
              .actions
                = link_to "ログアウト", destroy_user_session_path, method: :delete ,class: "next-btn"

          - else
            = form_with model: @user, url: user_registration_path, class: :form, local: true do |f|
              .actions
                = link_to "新規会員登録", signup_path, class: "next-btn"
  

  .single-main__form
    = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
      .l-single-content
        .l-single-content__group
          %label メールアドレス
          = f.email_field :email, autofocus: true
        .l-single-content__group
          %label{:for => ""} パスワード(英数字8文字以上)
          = f.password_field :password, autocomplete: "off"
        .actions
          = f.submit "ログイン", class: 'next-btn'
        .l-single-content__group
          = link_to "本人情報の登録について>", "/", class: "text-right"
=render "shared/minifooter"



