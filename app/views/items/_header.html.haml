.Header
  .Header__inner
    .Header__inner--main
      %h1.icon
        = link_to image_tag("/assets/logo/logo.png", class:"image"), "#"
      = form_with  local: true, method: :get, class: "search-form" do |form|
        = form.text_field :keyword, placeholder: "キーワードから探す", class: "searching-form"
        %button#sbtn{:type => "submit"} 
          %i.fas.fa-search

    .Header__inner--nav
      %ul.nav-left
        %li.nav-left--category
          = link_to "カテゴリー" , "#"
        %li.nav-left--brand
          = link_to "ブランド" , "#"
      %ul.nav-right
        %li.nav-right--login
          = link_to "ログイン" , "#",class: "login"
        %li.nav-right--new
          = link_to "新規会員登録" , "#",class: "new"