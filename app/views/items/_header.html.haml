= stylesheet_link_tag "furima/items"
= stylesheet_link_tag "furima/_reset"
.Header
  .Header__inner
    .Header__inner--main
      %h1.Header__inner--main--icon
        = link_to image_tag("/logo.png", class:"Header__inner--main--image"), "/"
      = form_with( scope: :search, url: root_path, local: true, method: :get, class: "search-form") do |form|
        = form.text_field :keyword, value: @search_params[:name],  placeholder: "キーワードから探す", class: "searching-form"
        %button_tag#sbtn{:type => "submit"} 
          %i.fas.fa-search
    .Header__inner--nav
      %ul.nav-left
        %li.nav-left--category
          = link_to "カテゴリー" , "#"
        %li.nav-left--brand
          = link_to "ブランド" , "#"
      %ul.nav-right
        %li.nav-right--login
          = link_to "ログイン" , "#",class: "login"
        %li.nav-right--new
          = link_to "新規会員登録" , "#",class: "new"